<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="6dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/img_directory_laptop"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/imglaptop1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textSize="20sp"
            android:id="@+id/directory_name_laptop"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:hint="Laptop1"
            app:layout_constraintEnd_toEndOf="@+id/img_directory_laptop"
            app:layout_constraintStart_toStartOf="@+id/img_directory_laptop"
            app:layout_constraintTop_toBottomOf="@+id/img_directory_laptop"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/directory_price_laptop"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:hint="price"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/directory_name_laptop"
            app:layout_constraintStart_toStartOf="@+id/directory_name_laptop"
            app:layout_constraintTop_toBottomOf="@+id/directory_name_laptop"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>